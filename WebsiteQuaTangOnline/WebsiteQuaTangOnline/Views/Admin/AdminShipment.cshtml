@{
    ViewBag.Title = "AdminShipment";
    Layout = "~/Views/adminLayout.cshtml";
}
@model IEnumerable<WebsiteQuaTangOnline.Models.HOADON>
<div class="container">
    <div class="row">
        <h1 class="text-center">Quản lý giao hàng</h1>
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Danh sách hóa đơn</h3>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>
                                    <em class="fa fa-cog"></em>
                                </th>
                                <th class="hidden-xs">Mã hóa đơn</th>
                                <th>Tên khách hàng</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Tổng tiền</th>
                                <th>Ngày lập</th>
                            </tr>
                        </thead>
                        <tbody>
                            @try
                            {
                                foreach( var item in Model)
                                {
                                    <tr>
                                        <td align="center">
                                            <a class="btn btn-default"><em class="fa fa-pencil"></em></a> 
                                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                                        </td>
                                        <td class="hidden-xs">@item.MaHoaDon</td>
                                        <td>@item.TenKhachHang</td>
                                        <td>@item.DiaChi</td>
                                        <td>@item.SoDienThoai</td>
                                        <td>@WebsiteQuaTangOnline.Models.ModelMethod.IntoMoney(item.MaHoaDon)</td>
                                        <td>@item.NgayLap</td>
                                </tr>
                                }
                                
                            }
                            catch { }
                            
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col col-xs-4">Trang @ViewBag.tranghientai của @ViewBag.soluongtrang </div>
                        <div class="col col-xs-8">
                            <ul class="pagination hidden-xs pull-right">
                                @try
                                {
                                    for(int i=1;i<=ViewBag.soluongtrang;i++)
                                    {
                                        <li>
                                            <a href="/Admin/AdminShipment/?min=@i">@i</a>
                                        </li>
                                    }
                                }
                                catch
                                {
                                    
                                }
                            </ul>
                            <ul class="pagination visible-xs pull-right">
                                <li>
                                    <a href="#">«</a>
                                </li>
                                <li>
                                    <a href="#">»</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
