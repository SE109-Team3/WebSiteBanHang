@{
    ViewBag.Title = "AdminStatistical";
    Layout = "~/Views/adminLayout.cshtml";
}
<style>
    .thongke td {
        padding: 5px 10px;
    }

    .active {
        color: #f00;
    }

    form div {
        padding: 5px 10px;
    }
</style>
<div class="container">
    <div class="row">
        <h1 class="text-center">Thống kê</h1>
        <form >
            <table class="thongke">
                <tr>
                    <td class="tieu-de active" data-type="1">Thống kê theo ngày</td>
                    <td><input type="radio"  id="1" checked="checked" onclick="ThongKe(1);" /></td>
                </tr>
                <tr>
                    <td class="tieu-de" data-type="2">Thống kê theo tháng</td>
                    <td><input type="radio"  id="2" onclick="ThongKe(2);" /></td>
                </tr>
                <tr>
                    <td class="tieu-de" data-type="3">Thống kê theo năm</td>
                    <td><input type="radio"  id="3" onclick="ThongKe(3);" /></td>
                </tr>
                <tr style="display:none">
                    <td>
                        <input type="number" name="ltk" value="1"/>
                    </td>
                </tr>
            </table>
            <!--Lấy ngày thống kê-->
            <div id="ltk">
                <div id="ngay">
                    Ngày:
                    <input type="number" name="ngay" max="31" min="1" />
                </div>

                <div id="thang">
                    Tháng:
                    <input type="number" name="thang" max="12" min="1" />
                </div>
                <div id="nam">
                    Năm:
                    <input type="number" name="nam" max="2200" min="2000" />
                </div>
                <br />
                <br />
                <input type="submit" value="Gửi dữ liệu" />
            </div>
        </form>
        <!--Bảng thống kê-->
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
                <thead>
                    <tr>

                        <th class="hidden-xs">Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Loại sản phẩm</th>
                        <th>Số lượt mua</th>
                        <th>Doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>SP001</td>
                        <td>ABC</td>
                        <td>LSP01</td>
                        <td>10</td>
                        <td>2000</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--script-->
<script>
    function ThongKe(loai) {
        // tìm hết tất cả các radio button
        $('td').each(function () {
            if (($(this).attr("data-type") == loai)) {
                if (($(this).attr("class") == "tieu-de active"))
                    return;
                // đổi css
                $(this).addClass("active");
                // hiển thị bảng nhập liệu
                var strhead = "ltk";
                if (loai == 1) {
                    $('#ngay').css("display", "block");
                    $('input[name="ltk"]').attr("value", "1");
                }
                else {
                    $('#ngay').css("display", "none");
                }
                if (loai <= 2) {
                    $('#thang').css("display", "block");
                    $('input[name="ltk"]').attr("value", "2");
                }
                else {
                    $('#thang').css("display", "none");
                    $('input[name="ltk"]').attr("value", "3");
                }

            }
            else {
                $(this).removeClass("active");
            }

        });

    }
</script>
