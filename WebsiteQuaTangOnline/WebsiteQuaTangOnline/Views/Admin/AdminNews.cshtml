@{
    ViewBag.Title = "AdminNews";
    Layout = "~/Views/adminLayout.cshtml";
}
@model IEnumerable<WebsiteQuaTangOnline.Models.TINTUC>

<div class="container">
    <div class="row">
        <h1 class="text-center">Quản lý tin tức</h1>
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Danh sách tin tức</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <button type="button" class="btn btn-sm btn-primary btn-create">Thêm mới</button>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>
                                    <em class="fa fa-cog"></em>
                                </th>
                                <th class="hidden-xs">Mã tin</th>
                                <th>Tiêu đề</th>
                                <th>Mô tả</th>
                                <th>Hình ảnh</th>
                                <th>Tác giả</th>
                                <th>Ngày viết</th>
                                <th>Số lượt xem</th>
                                <th>Sửa lần cuối</th>
                            </tr>
                        </thead>
                        <tbody>
                            @try
                            {
                                foreach(var item in Model)
                                {
                                    <tr>
                                        <td align="center">
                                            <a class="btn btn-default" href="/Admin/UpdateNews/?id=@item.MaTinTuc"><em class="fa fa-pencil"></em></a> <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                                        </td>
                                        <td class="hidden-xs">@item.MaTinTuc</td>
                                        <td>@item.TieuDe</td>
                                        <td>@item.MoTa</td>
                                        <td class="col-image"><img src="@item.UrlHinhAnh" style="width:100px; height:100px; margin:0 auto;" /></td> 
                                        <td>@item.TacGia</td>
                                        <td>@item.NgayDang.ToString("dd/MM/yyyy")</td>
                                        <td>@item.SoLuotxem</td>
                                        <td>@item.NgaySua</td>
                                    </tr>
                                }
                            }
                            catch { }
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col col-xs-4">Trang 1 của 5 </div>
                        <div class="col col-xs-8">
                            <ul class="pagination hidden-xs pull-right">
                                <li>
                                    <a href="/Admin/AdminNews/?num=1">1</a>
                                </li>
                                <li>
                                    <a href="/Admin/AdminNews/?num=2">2</a>
                                </li>
                                <li>
                                    <a href="/Admin/AdminNews/?num=3">3</a>
                                </li>
                                <li>
                                    <a href="/Admin/AdminNews/?num=4">4</a>
                                </li>
                                <li>
                                    <a href="/Admin/AdminNews/?num=5">5</a>
                                </li>

                            </ul>
                            <ul class="pagination visible-xs pull-right">
                                <li>
                                    <a href="#">«</a>
                                </li>
                                <li>
                                    <a href="#">»</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
