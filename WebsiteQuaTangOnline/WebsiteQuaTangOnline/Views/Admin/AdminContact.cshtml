@{
    ViewBag.Title = "AdminContact";
    Layout = "~/Views/adminLayout.cshtml";
}
@model IEnumerable<WebsiteQuaTangOnline.Models.LIENHE>
<div class="container">
    <div class="row">
        <h1 class="text-center">Liên hệ</h1>
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Danh sách liên hệ</h3>
                        </div>                     
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>Tên khách hàng</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                                <th>nội dung</th>
                            </tr>
                        </thead>
                        <tbody>
                            @try { 
                                foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.HoTen</td>
                                        <td>@item.SDT</td>
                                        <td>@item.Email</td>
                                        <td>@item.DiaChi</td>
                                        <td>@item.NoiDung</td>
                                    </tr>
                                }
                            }
                            catch { }
                            
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col col-xs-4">Trang 1 của 5 </div>
                        <div class="col col-xs-8">
                            <ul class="pagination hidden-xs pull-right">
                                <li>
                                    <a href="/Admin/AdminContact/?num=1">1</a>
                                </li>
                                <li>
                                    <a href="/Admin/AdminContact/?num=2">2</a>
                                </li>
                                <li>
                                    <a href="/Admin/AdminContact/?num=3">3</a>
                                </li>
                                <li>
                                    <a href="/Admin/AdminContact/?num=4">4</a>
                                </li>
                                <li>
                                    <a href="/Admin/AdminContact/?num=5">5</a>
                                </li>

                            </ul>
                            <ul class="pagination visible-xs pull-right">
                                <li>
                                    <a href="#">«</a>
                                </li>
                                <li>
                                    <a href="#">»</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>