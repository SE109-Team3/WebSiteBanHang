@model IEnumerable<WebsiteQuaTangOnline.Models.SANPHAM>
@{
    ViewBag.Title = "ProductPage";
    Layout = "~/Views/MasterPage/MasterPage.cshtml";
}

<div class="box">
    <div class="title">
        <h3>Sản phẩm mới</h3>
    </div>
    <div class="list-product">
        
        @try
        {
            foreach(var item in Model)
            {
                <div class="product-item">
                    <div class="img">
                        <a href="/Home/InfoProduct/?id=@item.MaSanPham">
                            <img src="@item.UrlHinhAnh" />
                        </a>
                    </div>
                    <div class="name-product">
                        <a href="/Home/InfoProduct/?id=@item.MaSanPham">@item.TenSanPham</a>
                    </div>
                    <div class="price">
                        <p>@item.DonGia.ToString("#,###") VNĐ</p>
                    </div>
                    <div class="foot">
                        <a href="/Home/AddProduct/?id=@item.MaSanPham" class="button">Đặt Mua</a>
                    </div>
                </div>
            }
        }
        catch { }
    
    </div>
    <div style="clear:both"></div>
    <div class="div-page">
        <ul id="pagination-clean">
            @try
			{
				int sotrang = ViewBag.sotrang;
				int hientai = ViewBag.trangHienTai;
				string loaiSP=ViewBag.loaiSP;
				if (hientai != 1)
				{
                    <li class="previous-off"><a href="?id=@loaiSP&min=@(hientai-1)">«Previous</a></li>
                }
                    
                for (int i = 1; i <= sotrang; i++)
                {
                    if(i==hientai)
                    {
                        <li class="active">@i</li>
                    }
                    else
                    {
                        <li><a href="?id=@loaiSP&min=@i">@i</a></li>
                    }       
                }
                if(hientai!=sotrang)
                {
                    <li class="next"><a href="?id=@loaiSP&min=@(hientai+1)">Next »</a></li>
                }
                    
            }
            catch { }
        </ul>
    </div>
    <div style="clear:both"></div>
</div>
