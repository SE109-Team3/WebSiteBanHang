@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/MasterPage/MasterPage.cshtml";
}
<div class="box">
    <div class="title">
        <h3>Liên hệ</h3>
    </div>
    <div class="header-contact">
        <h2>Quà tặng online</h2>
        <address>254A, Nguyễn Đình Chiểu, Q3, TpHCM</address>
        <p>Tel: 08 2338 246 460</p>
        <p>Fax: 08 1438 464 4460</p>
        <p>Email: contact@demo1011.web30s.vn</p>
    </div>
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post)){
    <div class="form-contact">
        <div class="content-left">
            <input id="hoten" name="HoTen" type="text" placeholder="Họ tên" />
            <input id="diachi" name="DiaChi" type="text" placeholder="Địa chỉ" />
            <input id="sdt" name="SDT" type="tel" placeholder="Số điện thoại" />
            <input id="email" name="Email" type="email" placeholder="Email" />
        </div>
        <div class="content-right">
            <textarea id="noidung" name="NoiDung" placeholder="Nội dung" cols="40" rows="9"></textarea>
        </div>
        <div style="clear:both"></div>
        <div class="foot-contact">
            <input type="submit" id="gui" class="btn" value="Gửi" />
            <input type="reset" id="xoa" class="btn" value="Xóa trắng" />
        </div>
    </div>
    }

</div>
