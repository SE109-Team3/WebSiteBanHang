@model WebsiteQuaTangOnline.Models.SANPHAM

@{
    ViewBag.Title = "InfoProduct";
    Layout = "~/Views/MasterPage/MasterPage.cshtml";
}

<div class="box">
    <div class="title">
        <h3>@Model.TenSanPham</h3>
    </div>
    <div class="cotainer">
        <div class="info-product-content">
            <div class="top">
                <div class="img-pro">
                    <img src="@Model.UrlHinhAnh" />
                </div>
                <div class="info-pro">
                    <p>Hãng sản xuất: @Model.NhaSanXuat</p>
                    <p>Số lượng: 1</p>
                    <p>Mã sản phẩm: @Model.MaSanPham</p>
                    <div id="gia-tien">
                        @Model.DonGia.ToString("#,###") VNĐ
                    </div>
                    <div class="control">         
                        @Html.ActionLink("Thêm vào giỏ", "AddProduct", new { id = @Model.MaSanPham})
                    </div>
                </div>
                <div style="clear:both"></div>
            </div>
            <div class="bottom">
                @Html.Raw(Model.MoTa)
            </div>   
        </div>
        <div class="facebook-comment">
            <!--lugin facebook cmt-->
        </div>       
        <div class="info-related">
            <h3>Sản phẩm liên quan</h3>
        </div>
        <div class="list-product">
            @try
            {
                IEnumerable<WebsiteQuaTangOnline.Models.SANPHAM> listProductRelated = (IEnumerable<WebsiteQuaTangOnline.Models.SANPHAM>)(ViewData["SanPhamLienQuan"]);
                foreach(var item in listProductRelated)
                {
                    <div class="product-item">
                        <div class="img">
                            <a href="/Home/InfoProduct/?id=@item.MaSanPham">
                                <img src="@item.UrlHinhAnh" />
                            </a>
                        </div>
                        <div class="name-product">
                            <a href="/Home/InfoProduct/?id=@item.MaSanPham">@item.TenSanPham</a>
                        </div>
                        <div class="price">
                            <p>@item.DonGia.ToString("#,###") VNĐ</p>
                        </div>
                        <div class="foot">
                            <a href="/Home/InfoProduct/?id=@item.MaSanPham" class="button">Đặt Mua</a>
                        </div>
                    </div>
                }
            }
            catch { }
            
            <div style="clear:both"></div>
        </div>
    </div>
</div>
