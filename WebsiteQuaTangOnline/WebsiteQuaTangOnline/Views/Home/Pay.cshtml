@model WebsiteQuaTangOnline.Models.GIOHANG
@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/MasterPage/MasterPage.cshtml";
}

<div class="box">
    <div class="title">
        <h3>Thanh Toán</h3>
    </div>
    <div class="wrap-cart">
        @using (Html.BeginForm("Pay","Home",FormMethod.Post)){
        <table class="pay-table">
            <tr>
                <td>Họ Tên</td>
                <td><input type="text"  name="TenKhachHang" /></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input type="text"  name="Email" /></td>
            </tr>
            <tr>
                <td>Địa chỉ</td>
                <td><input type="text" name="DiaChi" /></td>
            </tr>
            <tr>
                <td>Số điện thoại</td>
                <td><input type="text" name="SoDienThoai"/></td>
            </tr>
            <tr>
                <td>Fax</td>
                <td><input type="text" name="Fax"/></td>
            </tr>
            <tr>
                <td>Nội dung</td>
                <td><input type="text" name="NoiDung" /></td>
            </tr>
            <tr>
                <td colspan="2">
                    <table>
                        <tr class="header-table">
                            <th width="60%">Sản phẩm</th>
                            <th width="10%">Số lượng</th>
                            <th width="10%">Đơn giá</th>
                            <th width="15%">Thành tiền</th>
                        </tr>
                        @try
                        {
                            foreach( var item in Model.ListProduct)
                            {
                                <tr>
                                    <td class="pro-info">@item.TenSanPham</td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.DonGia</td>
                                    <td>@(item.DonGia*item.SoLuong)</td>
                                </tr>
                            }
                        }
                        catch { }
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center;">
                    <input type="submit" value="Đặt hàng" id="submit" style="width:100px"/>
                </td>
            </tr>
        </table>
        }        
    </div>
</div>
